classDiagram
    class Post {
        string slug
        string title
        string summary
        datetime date
        datetime lastmod
        boolean draft
        string[] tags
        string[] categories
        int reading_time
        string featured_image
        markdown body
    }
    
    class Author {
        string id
        string name
        string bio
        string avatar
        string github
        string linkedin
    }
    
    class Tag {
        string id
        string name
        string description
        int post_count
    }
    
    class Category {
        string id
        string name
        string description
        string parent_id
        int post_count
    }
    
    class Comment {
        string id
        string post_slug
        string author_name
        string author_email
        string content
        string parent_id
        boolean approved
        datetime created_at
    }
    
    class Subscriber {
        string id
        string email
        string name
        boolean consent
        boolean verified
        datetime created_at
    }
    
    class Asset {
        string id
        string filename
        string alt_text
        string caption
        int width
        int height
        string format
        string[] sizes
    }
    
    Post --> Author
    Post "1" --> "*" Comment
    Post "*" --> "*" Tag
    Post "*" --> "*" Category
    Post "1" --> "*" Asset
